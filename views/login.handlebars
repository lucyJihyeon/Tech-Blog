
<div class="wrapper-page flex justify-center">
  <div class="wrapper-login wrapper">
    <form class="login-form">
      <h1>Log In</h1>
      <div class="input-box">
        <input type="text" placeholder="user name" id="name-login" required />
        <i class="bx bx-user"></i>
      </div>
      <div class="input-box">
        <input
          type="password"
          placeholder="password"
          id="password-login"
          require
        />
        <i class="bx bxs-lock-alt"></i>
      </div>
      <p class="status"></p>
      <button type="submit" class="btn">Login</button>
    </form>
  </div>

  <div class="wrapper-sign wrapper">
    <form class="signup-form">
      <h1> Sign Up</h1>
      <div class="input-box">
        <input type="text" placeholder="user name" id="name-signup" required />
        <i class="bx bx-user"></i>

      </div>
      <div class="input-box">
        <input
          type="password"
          placeholder="password"
          id="password-signup"
          required
        />
        <i class="bx bxs-lock-alt"></i>
      </div>
      <p class="err-msg"></p>
      <button type="submit" class="btn">Sign Up</button>
    </form>
  </div>

</div>

<script src="/js/login.js" defer></script>