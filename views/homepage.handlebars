<div class="big-container-db">
  <div class="container-db">
    <div class="post">Explore Tech Blog</div>
    <div class="list-group">
      {{#if blogposts }}
        {{#each blogposts as |blog|}}
          <button
            class="detail-blog blog-title"
            data-index="{{blog.id}}"
          >{{blog.title}}
            <div>posted by
              {{blog.user.name}}
              on
              {{format_date blog.date_created}}</div>
          </button>
        {{/each}}
        {{else}}
        <p class="no-post">Join the Tech Conversation
          <a href="/api/blog">&nbsp; -Post Now</a>
        </p>
      {{/if}}
    </div>
  </div>
</div>